{
  "name": "printer-server",
  "version": "1.0.0",
  "description": "ローカルプリンターサーバー - POS注文自動印刷",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "author": "Your Company",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "escpos": "^3.0.0-alpha.6",
    "escpos-network": "^3.0.0-alpha.6"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.yourcompany.printer-server",
    "productName": "プリンターサーバー",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "プリンターサーバー"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/axios/**/*",
      "node_modules/escpos/**/*",
      "node_modules/escpos-network/**/*"
    ]
  }
}
